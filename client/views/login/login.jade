.row
  .col-xs-12
    h3.text-center Login
.row
  .col-xs-4
  .col-xs-4
    form.form(name='userForm', role='form', novalidate)
      .form-group
        label(for='email') Email
        input.form-control#email(type='email', name='email', ng-model='user.email', required, autofocus)
      .form-group
        label(for='due') Password
        input.form-control#password(type='password', name='password', minlength='3', ng-model='user.password', required)
      button.btn.btn-success.pull-right(ng-show='userForm.$valid', ng-click='login()') Login
  .col-xs-4

